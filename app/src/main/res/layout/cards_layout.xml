<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardBackgroundColor="@color/matYellow"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="16dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <TextView
            android:id="@+id/card_oiltype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Oil : "
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/card_oilquantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_oiltype"
            android:padding="2dp"
            android:text="Quantity : "
            android:textColor="@android:color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/card_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_oilquantity"
            android:padding="2dp"
            android:text="Price : "
            android:textColor="@android:color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/card_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_below="@id/card_oiltype"
            android:text="Status : "
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/card_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_price"
            android:layout_centerHorizontal="true"
            android:text="0 litres discount on this order."
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:textStyle="italic" />

    </RelativeLayout>

</android.support.v7.widget.CardView>