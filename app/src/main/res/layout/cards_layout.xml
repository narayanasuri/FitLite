<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardBackgroundColor="@color/matYellow"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/card_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="04-Dec-2016"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/card_oiltype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Oil : "
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/card_oilquantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_oiltype"
                android:layout_weight="0.6"
                android:padding="2dp"
                android:text="Quantity : "
                android:textColor="@android:color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/card_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:layout_gravity="end"
                android:text="Status : Pending"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:textStyle="italic" />
        </LinearLayout>

        <TextView
            android:id="@+id/card_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Price : "
            android:textColor="@android:color/white"
            android:textSize="17sp" />


        <TextView
            android:id="@+id/card_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="0 litres discount on this order."
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:textStyle="italic" />

    </LinearLayout>

</android.support.v7.widget.CardView>